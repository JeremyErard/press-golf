{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/lib/comprehensive-edge-test.ts",
    "src/lib/extreme-16-player-test.ts",
    "src/lib/settlement-flow-test.ts",
    "src/lib/settlement-notification-test.ts",
    "src/lib/settlement-verification.ts"
  ]
}
